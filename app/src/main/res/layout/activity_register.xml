<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Register">


    <TextView
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textColor="@color/textcolor"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/top"
        android:layout_marginLeft="23dp"
        android:text="Register Here" />

    <soup.neumorphism.NeumorphCardView
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="match_parent"
        android:layout_below="@id/start"
        android:layout_height="80dp"
        android:id="@+id/name"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:neumorph_shapeType="pressed">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/comp_name"
            android:hint="Enter Company Name"
            android:paddingLeft="20dp"
            android:inputType="text"
            android:background="@drawable/no_bg"/>

    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="match_parent"
        android:layout_below="@id/name"
        android:layout_height="80dp"
        android:id="@+id/t_no"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:neumorph_shapeType="pressed">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/comp_tm_no"
            android:hint="Enter Company Trademark No. "
            android:paddingLeft="20dp"
            android:inputType="number"
            android:background="@drawable/no_bg"/>

    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="match_parent"
        android:layout_below="@id/t_no"
        android:layout_height="80dp"
        android:id="@+id/add"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:neumorph_shapeType="pressed">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/comp_address"
            android:hint="Enter Company Address"
            android:paddingLeft="20dp"
            android:inputType="text"
            android:background="@drawable/no_bg"/>

    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="match_parent"
        android:layout_below="@id/add"
        android:layout_height="80dp"
        android:id="@+id/email"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:neumorph_shapeType="pressed">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/comp_email"
            android:hint="Enter E-Mail ID"
            android:paddingLeft="20dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/no_bg"/>

    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="match_parent"
        android:layout_below="@id/email"
        android:layout_height="80dp"
        android:id="@+id/pass"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:neumorph_shapeType="pressed">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/comp_pass"
            android:hint="Enter Password"
            android:paddingLeft="20dp"
            android:inputType="textPassword"
            android:background="@drawable/no_bg"/>

    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="match_parent"
        android:layout_below="@id/pass"
        android:layout_height="80dp"
        android:id="@+id/con_pass"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:neumorph_shapeType="pressed">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/comp_con_pass"
            android:hint="Enter Conform Password"
            android:paddingLeft="20dp"
            android:inputType="textPassword"
            android:background="@drawable/no_bg"/>

    </soup.neumorphism.NeumorphCardView>


    <soup.neumorphism.NeumorphButton
        android:id="@+id/submit"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/con_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Register Now"
        android:onClick="OnRegisterClicked"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:neumorph_backgroundColor="@color/textcolor"
        app:neumorph_shapeType="flat" />
</RelativeLayout>